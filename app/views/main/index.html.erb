<div class="modal fade" id="login">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Login to Rainy Day</h4>
      </div>
      <div class="modal-body">
        <h1>Login</h1>
        <%= bootstrap_form_for :user, url: '/login' do |user| %>
          <%= user.email_field :email %>
          <%= user.password_field :password %>
          <%= user.primary 'login' %>
          <a class="btn btn-primary" href="/reset" role="button">Forgot Password?</a>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="signup">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Sign up for Rainy Day</h4>
      </div>
      <div class="modal-body">
        <h1>Sign Up</h1>
        <%= bootstrap_form_for :user, url: '/signup' do |user| %>
          <%= user.text_field :name %>
          <%= user.email_field :email %>
          <%= user.password_field :password %>
          <%= user.password_field :password_confirmation %>
          <%= bootstrap_form_for :zip do |zip| %>
            <%= zip.text_field :code %>
            <%= user.primary 'Signup' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
